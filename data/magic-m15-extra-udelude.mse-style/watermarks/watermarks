	set symbol:
		{ set_combine(combine:"shadow",
		   set_alpha(
		    alpha: 0.5,
		    drop_shadow(offset_x: -0.01, offset_y: 0.03, blur_radius: 0.02, alpha: 1, color: rgb(0,0,0),
		     enlarge(border_size: 0.03,
		      symbol_variation(symbol: set.symbol, variation: "watermark")
		     )
		    )
		   )
		  )
		}
